<def-group>
  <definition class="inventory" id="installed_OS_is_custom_os" version="3">
    <metadata>
      <title>Custom OS</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <reference ref_id="cpe:/o:custom:os:1" source="CPE" />
      <description>The operating system installed on the system is Custom OS</description>
    </metadata>
    <criteria comment="current OS is 1" operator="AND">
      <extend_definition comment="Installed OS is part of the Unix family" definition_ref="installed_OS_is_part_of_Unix_family" />
      <criterion comment="Custom OS is installed" test_ref="test_custom_os" />
      <criterion comment="Custom OS 1 is installed" test_ref="test_custom_os_1" />
    </criteria>
  </definition>

  <unix:file_test check="all" check_existence="all_exist" comment="/etc/custom_os exists" id="test_custom_os" version="1">
    <unix:object object_ref="obj_custom_os" />
  </unix:file_test>
  <unix:file_object comment="check /etc/custom_os file" id="obj_custom_os" version="1">
    <unix:filepath>/etc/custom_os</unix:filepath>
  </unix:file_object>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="Check Custom OS version" id="test_custom_os_1" version="1">
    <ind:object object_ref="obj_custom_os_1" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_custom_os_1" version="1" comment="Check Custom OS version">
    <ind:filepath>/etc/custom_os</ind:filepath>
    <ind:pattern operation="pattern match">^1.[0-9]+$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>
